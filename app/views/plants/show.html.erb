<div>
  <!-- Plant Name and Category -->
  <h1 class="font-bold text-4xl"><%= @plant.name %></h1>
  <p class="text-gray-600 mt-2">Category: <%= @plant.category %></p>
</div>

<!-- Plant Image -->
<div class="my-6">
  <%= image_tag @plant.image_url.presence || "placeholder_plant.jpg", class:
  "rounded-xl object-cover object-center border" %>
</div>

<!-- Plant Description (if available) -->
<div class="my-6">
  <h2 class="text-2xl font-semibold">Description</h2>
  <p class="text-gray-700 mt-2">
    <%= @plant.description || "No description available." %>
  </p>
</div>

<!-- Back to Plants List Button -->
<div class="my-6">
  <%= link_to 'Back to Plant Collection', plants_path, class: "px-4 py-2
  bg-emerald-600 text-white rounded-lg hover:bg-emerald-500" %>
</div>
